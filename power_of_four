// to check if a number is power of four
// such that n = 4^x

var isPowerOfFour = function(n) {
     
    if(n === 1){
        return true;
    }
    if(n <= 0)
    return false;
    if(n %4 !==0)
    return false;

    return isPowerOfFour(n/4);
};

const ans = isPowerOfFour(6);
console.log(ans);
const ans2 = isPowerOfFour(16);
console.log(ans2);